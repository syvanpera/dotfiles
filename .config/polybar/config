[colors]
white     = #d8dee9
black     = #0d1117
gray      = #1d1f21
lightgray = #343D46

green     = #99c794
yellow    = #fac863
orange    = #f99157
red       = #cc6666
blue      = #6699cc
magenta   = #c594c5
cyan      = #5fb3b3

fg       = ${colors.white}
bg       = ${colors.black}
sepcolor = ${colors.yellow}
active   = ${colors.yellow}
warn     = ${colors.red}

[settings]
throttle-output = 5
throttle-output-for = 10

format-margin = 0

;== Bars ========================================================

[bar/base]
monitor = ${env:BAR_MONITOR}
enable-ipc = true

module-margin  = 0
line-size      = 2
underline-size = 2

background = ${colors.bg}
foreground = ${colors.fg}

[bar/main]
inherit = ${env:BAR_BASE}
modules-left = workspaces xwindow
modules-right = fs-root fs-home spacer cpu memory spacer network vpncheck spacer pulseaudio backlight battery spacer datetime spacer

[bar/secondary]
inherit = ${env:BAR_BASE}
modules-left = workspaces xwindow
modules-right = datetime spacer

[bar/hidpi]
inherit = bar/base

font-0 = "xos4Terminus:pixelsize=22:weight=bold;2"
font-1 = "FontAwesome:size=20;4"
font-2 = "Material Icons:size=20;4"
font-3 = "RobotoMono Nerd Font:pixelsize=20;1"

height = 45

[bar/lodpi]
inherit = bar/base

font-0 = "xos4Terminus:pixelsize=12;2"
font-1 = "FontAwesome:size=12;4"
font-2 = "Material Icons:size=12;4"
font-3 = "RobotoMono Nerd Font:pixelsize=12;1"

height = 30


;== Modules ========================================================

[module/separator]
type = custom/text
content = "|"
content-background = ${colors.bg}
content-foreground = ${colors.sepcolor}

[module/spacer]
type = custom/text
content = "  "
content-background = ${colors.bg}
content-foreground = ${colors.sepcolor}

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = true
format-padding = 0

icon-0 = 1;1:
icon-1 = 2;2:
icon-2 = 3;3:
icon-3 = 4;4:
icon-4 = 5;5:
icon-5 = 6;6:
icon-default =

format = <label-state>
label-active = %icon%
label-occupied = %icon%
label-urgent = %icon%
label-empty = %icon%

label-occupied-padding = 1
label-empty-padding = 1
label-urgent-padding = 1
label-active-padding = 1

label-active-foreground = ${colors.active}
label-active-background = ${colors.bg}
label-urgent-foreground = ${colors.warn}
label-empty-foreground = ${colors.fg}
label-occupied-foreground = ${colors.active}

label-active-underline = ${colors.active}
label-urgent-underline = ${colors.warn}

[module/xwindow]
type = internal/xwindow
label = "%title:0:100:...%"
label-xwindow-width = 100
label-foreground = ${colors.yellow}
format-prefix = " •    "
format-foreground = ${colors.yellow}

[module/fs-root]
type = internal/fs
interval = 60

mount-0 = /

label-mounted = "%free%  "
format-mounted-prefix = " "
label-mounted-underline = ${colors.blue}
format-mounted-underline = ${colors.blue}
label-unmounted = " not mounted  "
label-unmounted-foreground = ${colors.lightgray}
label-mounted-foreground = ${colors.fg}
format-mounted-prefix-foreground = ${colors.blue}

[module/fs-home]
type = internal/fs
interval = 60

mount-0 = /home

label-mounted = "%free%"
format-mounted-prefix = " "
label-mounted-underline = ${colors.blue}
format-mounted-underline = ${colors.blue}
label-unmounted = " not mounted"
label-unmounted-foreground = ${colors.lightgray}
label-mounted-foreground = ${colors.fg}
format-mounted-prefix-foreground = ${colors.blue}

[module/cpu]
type = internal/cpu
interval = 5

label = "%percentage%%  "
format-prefix = "CPU "
; format = %{A1:alacritty -e htop:}<label> <bar-load>%{A}
